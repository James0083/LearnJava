package Recipe_Management;

import java.awt.*;
import javax.swing.*;

public class AddPage extends JPanel //implements ActionListener
{
	// Fields
	// 음식이름, 필요한 도구, 재료, 과정
	JPanel p_sub_1, p_sub_2, p_sub_3, p_sub_4;
	JRadioButton rbOven, rbStove, rbPan;
	JLabel lbTitle, lbTools, lbIngredients, lbStep;
	JTextField tfTitle, tfTools, tfIngredients, tfStep;
	JButton btSetTitle, btAddTools, btAddIngredients, btAddStep;
	JTextArea taResult;
	
	public AddPage() {
		this.setLayout(new GridLayout(5,1,3,0));
		add(p_sub_1 = new JPanel());
		add(p_sub_2 = new JPanel());
		add(p_sub_3 = new JPanel());
		add(p_sub_4 = new JPanel());
		
		p_sub_1.add(lbTitle = new JLabel("요리 이름 : "));
		p_sub_1.add(tfTitle = new JTextField(10));
		p_sub_1.add(btSetTitle = new JButton("완료"));
		
		p_sub_2.add(lbTools = new JLabel("도구 추가 : "));
		p_sub_2.add(tfTools = new JTextField(10));
		p_sub_2.add(btAddTools = new JButton("추가"));
//		
//		add(lbIngredients = new JLabel("재료 추가 : "));
//		
//		add(lbStep = new JLabel("단계 추가 : "));
		
		add(taResult = new JTextArea());
		
		
		taResult.setEditable(false);
		
	}

}
